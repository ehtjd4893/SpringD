	<!-- 로그인(login) -->
	<select id="login" resultType="com.team.d.dto.MemberDTO">
		SELECT MNO, MNAME, MID, MPW, MEMAIL, MPHONE, MGRADE, MREGDATE
		  FROM MEMBER
		 WHERE MID = #{mId}
		   AND MPW = #{mPw}
	</select>
	
	<!-- 아이디 체크(idCheck) -->
	<select id="idCheck" resultType="int">
		SELECT COUNT(MNO)
		  FROM MEMBER
		 WHERE MID = #{mId}
	</select>
	
	<!-- 회원가입(join) -->
	<insert id="join">
		INSERT INTO MEMBER
		VALUES (MEMBER_SEQ.NEXTVAL, #{mName}, #{mId}, #{mPw}, #{mEmail}, #{mPhone}, #{mGrade}, SYSDATE)
	</insert>
	
	
	
	
	
	
	
	
	
	
	


</mapper>

